root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,rst,ini,oml,gradle}]
indent_style = space
indent_size = 4

[*.{html,css,scss,json,yml,svg,xml,ttl}]
indent_style = space
indent_size = 2
max_line_length = 140

[*.md]
trim_trailing_whitespace = false

[*.project]
indent_style = space
indent_size = 2
